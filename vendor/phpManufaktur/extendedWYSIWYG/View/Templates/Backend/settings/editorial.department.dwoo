<div id="editorial">
  <ul id="sub_navigation">
  {foreach $sub_navigation nav}
    {if $nav.active == 1}
      <li class="selected"><a href="{$nav.url}">{translate($nav.text)}</a></li>
    {else}
      <li><a href="{$nav.url}">{translate($nav.text)}</a></li>
    {/if}
  {/foreach}
  </ul>
  <div id="editorial_department">
    <h2>{translate('Departments')}</h2>
    {if $message.active == 1}
      <div class="wysiwyg_message">{$message.content}</div>
    {else}
      <div class="wysiwyg_intro">
        {translate('<p>At least you must specify one department for your editorial team.</p>')}
      </div>
    {/if}
  Hi!
  </div>
</div>